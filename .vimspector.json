{
  "configurations": {
    "Launch C main": {
      "adapter": "vscode-cpptools",
      "breakpoints": {
        "exception": {
          "all": "N"
        }
      },
      "configuration": {
        "request": "launch",
        "program": "${workspaceRoot}/main",
        "args": [],
        "stopAtEntry": true,
        "cwd": "${workspaceRoot}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          },
          {
            "description": "Enable reverse debugging",
            "text": "record",
            "ignoreFailures": true
          }
        ]
      },
      "preLaunchTask": {
        "shell": "gcc -g -O0 -fsanitize=address -Wall -Wextra -Wconversion main.c -o main"
      }
    }
  }
}

